<%- include('../partials/header') %>

<h1>Edit Skill - <%=skill.name%> </h1>

<form 
action="/skills/<%=skill.id%>?_method=PUT" method="POST" autocomplete="off">

  <input type="text" name="name" value="<%= skill.name %>">
  <input type="checkbox" name="done" 
    <% if(skill.done){ %>
    checked
    <% } %>
  >
  
  <button type="submit">Edit Skill</button>


</form>

